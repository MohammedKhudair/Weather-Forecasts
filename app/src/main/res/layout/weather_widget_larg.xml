<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_transparent_backround"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.WeatherForecasts.AppWidgetContainer">

    <TextView
        android:id="@+id/appWidget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="24sp"
        tools:text="Today,june 12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="?attr/appWidgetTextColor"
            android:textSize="54sp"
            tools:text="12" />

        <ImageView
            android:id="@+id/appwidget_image_weather_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:src="@drawable/ic_broken_clouds" />
    </LinearLayout>

    <TextView
        android:id="@+id/appWidget_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Al Hillah" />


</LinearLayout>